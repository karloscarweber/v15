{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<div class="layout-centered post-container page-template">
  {{> "site-header"}}
</div>
  {{#post}}
      <article class="gl_lesson post-container {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

        {{> "swift-foundations-sidebar"}}

        <div class="gl_lesson__content_wrapper">
          <h1>{{title}}</h1>


          {{#if feature_image}}
            <img class="feature_image" src="{{feature_image}}" alt="">
          {{/if}}

          <hr>

          <div class="post_subtext">
          <p class="f-step--1 "><span class="date-time" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D YYYY"}}</span>, by {{authors separator=", "}},<br>
          <!--<span>Tags: {{#if tags}}
              {{#foreach tags}}<a href="{{url}}" title={{name}} class="tag tag-{{id}} {{slug}}">{{name}}</a> {{/foreach}}
            {{/if}}</span>--></p>
          </div>

          <div class="content">
            {{content}}
          </div>
        </div>

      </article>
  {{/post}}
