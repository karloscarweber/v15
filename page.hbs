{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{> "site-nav"}}
    {{#post}}
    <article class="{{post_class}} {{#unless feature_image}}no-image{{/unless}}">

      {{#if feature_image}}
      <img src="{{feature_image}}" alt="">
      {{/if}}

      <h1>{{title}}</h1>

      {{content}}

    </article>
    {{/post}}


