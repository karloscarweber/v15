{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{> "site-header"}}

  {{#post}}
  <article class="layout-centered {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

    <h1>{{title}}</h1>

    {{#if feature_image}}
      <img src="{{feature_image}}" alt="" class="feature_image">
    {{/if}}

    <div class="content">
      {{content}}
    </div>
  </article>
  {{/post}}

