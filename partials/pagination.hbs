<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="page-button newer-posts" href="{{page_url prev}}">Newer posts</a>
    {{/if}}
    <span class="page-number">{{page}} of {{pages}}</span>
    {{#if next}}
        <a class="page-button older-posts" href="{{page_url next}}">Older posts</a>
    {{/if}}
</nav>
