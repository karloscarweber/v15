{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

  {{> "site-nav"}}

  {{#post}}
      <article class="{{post_class}} {{#unless feature_image}}no-image{{/unless}}">

        <h1>{{title}}</h1>

          <span class="date-time" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D YYYY"}}</span>,
          <span>Tags: {{#if tags}}
              {{#foreach tags}}<a href="{{url}}" title={{name}} class="tag tag-{{id}} {{slug}}">{{name}}</a> {{/foreach}}
            {{/if}}</span>

          {{#if feature_image}}
            <img  src="{{feature_image}}" alt="">
          {{/if}}

        {{content}}

      </article>
  {{/post}}

