{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}



  <div class="layout-centered post-container page-template">
    {{> "site-header"}}
  </div>

  {{#post}}
      <article class="layout-centered post-container post-template {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

        <div class="gl_story__content_wrapper">
          <h1>{{title}}</h1>

          {{#if feature_image}}
            <img class="feature_image"
              srcset="{{img_url feature_image size="s"}} 300w,
                      {{img_url feature_image size="m"}} 600w,
                      {{img_url feature_image size="l"}} 1000w,
                      {{img_url feature_image size="xl"}} 2000w"
              sizes="(max-width: 1000px) 400px, 700px"
              src="{{img_url feature_image size="m"}}"
              alt="{{title}}"
            />
          {{/if}}

          {{#if excerpt}}
            <p class="post_excerpt">{{excerpt}}</p>
          {{/if}}

          <div class="post_subtext">
          <p class="f-step--1 "><span class="date-time" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D YYYY"}}</span>, by {{authors separator=", "}},<br>
          <!--<span>Tags: {{#if tags}}
              {{#foreach tags}}<a href="{{url}}" title={{name}} class="tag tag-{{id}} {{slug}}">{{name}}</a> {{/foreach}}
            {{/if}}</span>--></p>
          </div>

          <hr>

          <div class="content">
            {{content}}
          </div>
        </div>
      </article>
  {{/post}}
