{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

  <div class="layout-centered post-container page-template">
    {{> "site-header"}}

    {{#post}}
        <article class="{{post_class}} {{#unless feature_image}}no-image{{/unless}}">

            <h1>{{title}}</h1>

            {{#if feature_image}}
              <img class="feature_image" src="{{feature_image}}" alt="">
            {{/if}}

            <div class="content">
              {{content}}


              <div class="app-matrix">
                <a class="app-row"><span class="app-icon mathematical"></span>Mathematical</a>
                <a class="app-row"><span class="app-icon gouda"></span>Gouda</a>
                <a class="app-row"><span class="app-icon blaster"></span>Blaster</a>
                <a class="app-row"><span class="app-icon dubbble"></span>Dubbble</a>
                <a class="app-row"><span class="app-icon cheddar"></span>Cheddar</a>
                <a class="app-row"><span class="app-icon milkjar"></span>Milkjar</a>
              </div>


            </div>

        </article>
    {{/post}}

  </div>

{{#contentFor "template_class"}} apps-template page-template {{/contentFor}}
